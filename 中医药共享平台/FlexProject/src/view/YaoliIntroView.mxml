<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	 creationComplete="init()" paddingLeft="20" paddingTop="10">
	
	
	<mx:Model id="myModel" source="../conf/IntroInfo.xml"/>
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			[Bindable]
			public var info:String;
			
			public function init():void
			{
				info = myModel.domain[1].introduce;
			}
		]]>
	</mx:Script>
	
	<mx:Label  height="41" width="80%" color="#660066" text="中药药理数据库介绍" fontSize="24" textAlign="center"/>
	<mx:Text text="{info}" height="220" width="90%" color="#6666FF" fontSize="18" letterSpacing="2"/>
		
		
	<mx:HBox width="90%">
		<mx:Image width="30%" height="200" source="@Embed('assets/1.jpg')"/>
		<mx:Image width="30%" height="200" source="@Embed('assets/2.jpg')"/>
		<mx:Image width="30%" height="200" source="@Embed('assets/3.jpg')"/>
	</mx:HBox>	
		
	
</mx:VBox>